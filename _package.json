{
    "name": "hexa-ts-root",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
      "infrastructure",
      "@hexa-ts/backend-express",
      "@hexa-ts/infrastructure",
      "backend-express"
    ],
    "scripts": {
      "install:backend": "cd backend-express && npm install",
    "install:domain": "cd domain && npm install",
    "install:infra": "cd infrastructure && npm install",
    "install:all": "npm run install:backend && npm run install:domain && npm run install:infra",
      "build:backend": "cd backend-express && npm run build",
      "start:backend": "cd backend-express && npm run start",
      "dev:backend": "cd backend-express && npm run dev",
      "prisma:generate": "cd backend-express && npm run prisma:generate",
      "prisma:migrate": "cd backend-express && npm run prisma:migrate",
      "prisma:studio": "cd backend-express && npm run prisma:studio",
      "build": "npm run prisma:generate && npm run build:backend",
      "start": "npm run start:backend",
      "dev": "npm run dev:backend"
    },
    "engines": {
      "node": ">=16.0.0",
      "npm": ">=7.0.0"
    }
  }