{
  "name": "backend-express-6.1itacademy",
  "version": "1.0.0",
  "description": "backend from excercise 6.1 of It Academy",
  "main": "index.js",
  "scripts": {
    "prisma:generate": "cd ../infrastructure && npx prisma generate",
    "prisma:migrate": "cd ../infrastructure && npx prisma migrate dev --schema=./prisma/schema.prisma",
    "prisma:studio": "cd ../infrastructure && npx prisma studio --schema=./prisma/schema.prisma",
    "preinstall": "cd ../infrastructure && npm install",
    "postinstall": "npm run prisma:generate",
    
    "build": "tsc",
    "start": "node index.js",
    "dev": "ts-node index.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-validator": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.5.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "esbuild-register": "^3.6.0",
    "nodemon": "^3.1.7",
    "prisma": "^5.10.0",
    "typescript": "^5.6.2",
    "ts-node": "^10.9.1"
  }
}